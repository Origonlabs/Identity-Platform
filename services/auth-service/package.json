{
  "name": "@identity-platform/auth-service",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication service with risk assessment and MFA",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t identity-platform/auth-service:latest .",
    "docker:run": "docker run -p 3001:3000 -p 50051:50051 identity-platform/auth-service:latest"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "@prisma/client": "^6.12.0",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "redis": "^4.6.12",
    "jsonwebtoken": "^9.0.3",
    "bcrypt": "^5.1.1",
    "nodemailer": "^6.9.7",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.56.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.56.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcrypt": "^5.0.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "vitest-mock-extended": "^1.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
