# ============================================================================
# Auth Service Environment Variables
# ============================================================================

# Node Environment
NODE_ENV=development
PORT=3000

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/auth_service?schema=public"
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/auth_service?schema=public"

DATABASE_CONNECTION_LIMIT=10
DATABASE_LOGGING=false
DATABASE_SSL=false

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis TTLs (in seconds)
REDIS_SESSION_TTL=3600
REDIS_OAUTH_STATE_TTL=600
REDIS_RATE_LIMIT_TTL=60

# ============================================================================
# Security & JWT
# ============================================================================
BCRYPT_SALT_ROUNDS=12

JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d
JWT_ALGORITHM=HS256

# ============================================================================
# OAuth2 Configuration
# ============================================================================
OAUTH_AUTHORIZATION_CODE_EXPIRATION=600
OAUTH_ACCESS_TOKEN_EXPIRATION=3600
OAUTH_REFRESH_TOKEN_EXPIRATION=2592000

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================================================
# Observability - Sentry
# ============================================================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# ============================================================================
# Observability - OpenTelemetry
# ============================================================================
OTEL_ENABLED=false
OTEL_SERVICE_NAME=auth-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_TRACES_SAMPLE_RATE=1.0
OTEL_METRICS_ENABLED=false
OTEL_METRICS_INTERVAL=60000

# ============================================================================
# Observability - Prometheus
# ============================================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# OAuth Providers Configuration
# ============================================================================

# GitHub
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret

