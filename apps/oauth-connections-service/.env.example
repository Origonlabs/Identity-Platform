# Service Configuration
PORT=8202
SERVICE_VERSION=0.1.0
NODE_ENV=development
INTERNAL_SERVICE_TOKEN=replace-with-strong-token
INTERNAL_SERVICE_JWT_SECRET=replace-with-strong-jwt-secret
INTERNAL_SERVICE_JWT_SECRETS=kid1:replace-with-strong-jwt-secret,kid2:optional-rotated-secret

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/oauth_connections

# NATS Event Bus
NATS_URL=nats://localhost:4222

# Outbox Processor
OUTBOX_POLL_INTERVAL_MS=5000
OUTBOX_BATCH_SIZE=10
OUTBOX_MAX_RETRIES=3

# Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
LOG_LEVEL=info

# Redis (for rate limiting/caching)
REDIS_URL=redis://:PASSWORD-PLACEHOLDER--redis123@localhost:6379
